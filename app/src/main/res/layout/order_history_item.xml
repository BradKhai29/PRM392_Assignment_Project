<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/primary">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã đơn:"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/light_100"
                android:layout_gravity="start|center_vertical"/>
            <TextView
                android:id="@+id/tvOrderCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024062412230024"
                android:textSize="@dimen/font_size_small"
                style="@style/text_light_fw_bold"
                android:layout_gravity="end|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng thanh toán:"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/light_100"
                android:layout_marginRight="4dp"
                android:layout_gravity="start|center_vertical"/>
            <TextView
                android:id="@+id/tvOrderTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120.000 VND"
                android:textSize="@dimen/font_size_small"
                style="@style/text_light_fw_bold"
                android:layout_gravity="end|center_vertical"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian:"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/light_100"
                android:layout_gravity="start|center_vertical"/>
            <TextView
                android:id="@+id/tvCheckoutDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12h30 - 02/10/2023"
                style="@style/text_light_fw_bold"
                android:textSize="@dimen/font_size_small"
                android:layout_gravity="end|center_vertical"/>
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
