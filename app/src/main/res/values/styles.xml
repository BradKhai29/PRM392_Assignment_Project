<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_dark_fw_bold">
        <item name="textFillColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_dark_fw_normal">
        <item name="textFillColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_light_fw_bold">
        <item name="textFillColor">@color/light_100</item>
        <item name="android:textColor">@color/light_100</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="app_input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="cursorColor">@color/primary</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxBackgroundColor">@color/light_100</item>
        <item name="passwordToggleTint">@color/primary</item>
    </style>

    <dimen name="border_radius_small">8dp</dimen>
</resources>